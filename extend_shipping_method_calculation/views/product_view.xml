<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_only_form_view_inherited" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='weight']" position="before">
                <label for="x_aa_ol_transport_length"/>
                    <div class="o_row" name="length">
                        <field name="x_aa_ol_transport_length"/>
                            <span>mm</span>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>