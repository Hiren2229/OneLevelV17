<odoo>
  <data>
        <!-- Add smart button of SO on invoice form-->
        <record id="view_move_form_add_so_ref" model="ir.ui.view">
            <field name="name">account.move.form.add.so.ref</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[hasclass('oe_button_box')]" position="inside">
                    <button name="action_view_sale" type="object" class="oe_stat_button" icon="fa-dollar" invisible="x_aa_ol_sale_count==0">
                        <field name="x_aa_ol_sale_count" widget="statinfo" string="Sales"/>
                    </button>
                </xpath>
            </field>
        </record>
  </data>
</odoo>