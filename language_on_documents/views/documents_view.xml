<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- add language field in tree view of documents-->
    <record id="documents_view_list_add_language" model="ir.ui.view">
        <field name="name">documents list add language</field>
        <field name="model">documents.document</field>
        <field name="inherit_id" ref="documents.documents_view_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner_id']" position="after">
                <field name="x_aa_ol_language_id"/>
                <!--   update 162 step1-->
                <field name="x_ad_ol_document_group"/>
                <!--   update 162 step1 end -->
                <!--   update 162 step3-->
                <field name="x_ad_ol_is_published"/>
                <field name="x_ad_ol_online_name"/>
                <field name="x_ad_ol_is_certification_document" invisible="1"/>
                <field name="x_ad_ol_certification_country" string="Certif. Country"/>
                <!--   update 162 step3-->
                <!--                update 248 step1 -->
                <field name="res_model" optional="show"/>
                <field name="x_ad_ol_folder_full_path" optional="show"/>
                <!--    fix issue mail_template-->
                <button name="correct_document_resource_model"
                        string="Fix Attachment Resource Model"
                        class="btn-primary"
                        type="object"  invisible="1"/>
                <!--    fix issue mail_template end -->

                <!--                update 248 step1 end -->
            </xpath>
        </field>
    </record>

    <!--                update 162 step3-->
    <record id="document_view_form_inherite" model="ir.ui.view">
        <field name="name">documents form Inherite</field>
        <field name="model">documents.document</field>
        <field name="inherit_id" ref="documents.document_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='folder_id']" position="after">
                <field name="x_ad_ol_document_group"/>
                <field name="x_ad_ol_is_published" readonly="is_locked==True" />
            </xpath>
        </field>
    </record>
    <!--                update 162 step3 end -->

    <!--                update 162 step1-->
    <record id="documents_groups_tree_view" model="ir.ui.view">
        <field name="name">documents.groups.tree.view</field>
        <field name="model">documents.groups</field>
        <field name="arch" type="xml">
            <tree string="Document Groups">
                <field name="sequence" widget="handle"/>
                <field name="name" string="Document Group Name"/>
                <field name="x_ad_ol_document_group_logo_exits" string="Has a Logo"/>
            </tree>
        </field>
    </record>

    <record id="documents_groups_from_view" model="ir.ui.view">
        <field name="name">documents.groups.form</field>
        <field name="model">documents.groups</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Document Group">
                <group>
                    <group>
                        <label for="name" string="Group Name"/>
                        <div class="col-6">
                            <field name="name"/>
                        </div>
                    </group>
                    <group>
                        <div class="col-3" style="width: 150px;">
                            <field name="x_ad_ol_document_group_logo" widget="image" class="oe_avatar"/>
                        </div>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="documents_groups_action" model="ir.actions.act_window">
        <field name="name">Documents Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">documents.groups</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Documents Groups" id="documents.group_menu" parent="documents.Config"
              action="documents_groups_action" sequence="99"/>
    <!--                update 162 step1 end-->

<!--update 248 step1-->
    <record id="folder_view_tree_inherit" model="ir.ui.view">
        <field name="name">Workspace tree</field>
        <field name="model">documents.folder</field>
        <field name="inherit_id" ref="documents.folder_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='facet_ids']" position="after">
                <field name="x_ad_ol_folder_document_type"/>
                <field name="x_ad_ol_folder_full_path"/>
            </xpath>

        </field>
    </record>
    <record id="documents_folder_view_form_inherit" model="ir.ui.view">
        <field name="name">documents.folder.view.form.inherit</field>
        <field name="model">documents.folder</field>
        <field name="inherit_id" ref="documents.folder_view_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="x_ad_ol_folder_document_type"/>
                <field name="x_ad_ol_folder_full_path"/>
            </field>

        </field>
    </record>
    <!--update 248 step1 end -->
</odoo>
