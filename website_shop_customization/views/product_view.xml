<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_inh" model="ir.ui.view">
            <field name="name">product.template.form.inh</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="website_sale.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='product_template_images']" position="after">
                    <group name="website_desc_field" string="Product Description">
                        <field name="x_aa_gp_short_description" />
                        <field name="x_aa_gp_long_description" />
                    </group>
                </xpath>
                <field name="accessory_product_ids" position="attributes">
                    <attribute name="domain">[('id', '!=', active_id), '|', ('company_id', '=', company_id), ('company_id', '=', False)]</attribute>
                </field>
                <field name="website_sequence" position="attributes">
                    <attribute name="groups"></attribute>
                </field>
            </field>
        </record>

        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inh</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_standard_price']" position="inside">
                    <field name="x_aa_gp_is_color_code"  />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
