    <record id="cart_lines_inherit" model="ir.ui.view">
        <field name="name">website_shop_customization_cart_lines</field>
        <field name="inherit_id" search="[('key', '=', 'theme_prime.cart_lines')]"/>
        <field name="type">qweb</field>
        <field name="key">website_shop_customization.cart_lines_inherit</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='cart_products']//div[hasclass('flex-grow-1')]" position="before">
                 <div class="text-center search_number">
                    <t t-if="line.product_id.x_aa_ol_search_name">
                        <b><span t-field="line.product_id.x_aa_ol_search_name"/></b>
                    </t>
                 </div>
            </xpath>
        </field>
    </record>

    <record id="cart_sidebar_inherit" model="ir.ui.view">
        <field name="name">website_shop_customization_cart_sidebar</field>
        <field name="inherit_id" search="[('key', '=', 'theme_prime.cart_sidebar')]"/>
        <field name="type">qweb</field>
        <field name="key">website_shop_customization.cart_sidebar_inherit</field>
        <field name="arch" type="xml">
            <xpath expr="//a[hasclass('tp-link-dark')]" position="replace">
                <a class="tp-link-dark" t-att-href="line.product_id.website_url">
                    <t t-if="line.product_id.x_aa_ol_search_name">
                        <span t-field="line.product_id.x_aa_ol_search_name"/> <br/>
                    </t>
                    <t t-esc="line.name_short"/>
                </a>
            </xpath>
        </field>
    </record>
    <!-- [266] Changes End -->

</odoo>