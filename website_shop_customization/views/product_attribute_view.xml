<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_attribute_view_form_add_ral_color" model="ir.ui.view">
        <field name="name">product.attribute.view.form.add.ral.color</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <field name="create_variant" position="after">
                <field name="x_aa_ol_is_ral_color"/>
            </field>
        </field>
    </record>

    <record id="product_attribute_value_inh" model="ir.ui.view">
        <field name="name">product.attribute.value</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='attribute_values']/field[@name='value_ids']/tree" position="inside">
                <field name="x_aa_ol_is_color"/>
            </xpath>
        </field>
    </record>

</odoo>
