<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_signature_customization" model="ir.ui.view">
        <field name="name">view.company.form.signature.customization</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="after">
                <page string="Preferences" name="preferences">
                    <group>
                        <field name="x_aa_ol_company_signature" options="{'style-inline': true}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
